<div class="section">
    <%= simple_form_for @user do |f| %>
    <div class= "field">
        <div class="control">
            <%= f.input :username, input_html: { class: 'input', placeholder: 'Enter a Username' }, wrapper: false, label_html: { class: 'label'} %>
        </div>
    </div>
    <div class= "field">
        <div class="control">
        <%= f.input :email, input_html: { class: 'input', placeholder: 'Enter an Email' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
    </div>
    <div class= "field">
        <div class="control">
        <%= f.input :password, input_html: { class: 'input', placeholder: 'Enter a Password' }, wrapper: false, label_html: { class: 'label' } %>
        </div>
    </div>
    <%= f.button :submit, class: "button is-primary" %>
    <% end %>
    <div class="level-item">
        <%= link_to "Cancel request and Return to Posts", posts_path %>
    </div>
</div>